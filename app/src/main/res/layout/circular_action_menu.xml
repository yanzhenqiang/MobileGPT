<?xml version="1.0" encoding="utf-8"?>
<org.autojs.autojs.ui.floating.CircularActionMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    app:cam_angle="165"
    app:cam_radius="80dp">

    <ImageView
        android:id="@+id/layout_inspect"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_blue"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_circular_menu_bounds_white" />

    <ImageView
        android:id="@+id/open_launcher"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_gray"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_home_light" />

    <ImageView
        android:id="@+id/exit_floating_window"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_yellow"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_close" />

</org.autojs.autojs.ui.floating.CircularActionMenu>